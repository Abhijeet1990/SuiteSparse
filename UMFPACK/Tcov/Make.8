#===============================================================================
# BLAS, do not test for integer overflow. No divide by zero.
#===============================================================================

CC = gcc
CF = -O0 -g -ftest-coverage -fprofile-arcs -O0 -fPIC
UMFPACK_CONFIG = -DTESTING -DNO_DIVIDE_BY_ZERO
LIB = -llapack -lrefblas -lgfortran -lgfortranbegin -lm -lrt

RANLIB = ranlib
MV = mv -f
ARCHIVE = ar rv

AR_TARGET = $(LIBRARY).a
SO_TARGET = $(LIBRARY).so
SO_OPTS = -shared -Wl,-soname -Wl,$(SO_TARGET)

#===============================================================================

CLEAN = *.o *.obj *.ln *.bb *.bbg *.da *.c.tcov *.c.gcov gmon.out
